pipeline {
	agent {
		docker {
			image 'maven:3.6.1-jdk-8-slim'
			args '-v $HOME/.m2:/root/.m2'
                }
        }

	stages{
		stage("build"){
			steps{
				echo 'Compiling result app'
				dir('worker'){
					sh 'npm install'
				}
			}
		}
		stage("test"){
			steps{
				echo 'Running Unit Tets on result app'
				dir('result'){
					sh 'npm install'
					sh 'npm test'
				}
			}
		}
	}

	post{
		always{
			echo 'Building multibranch pipeline for result is completed..'
		}
	}
}
